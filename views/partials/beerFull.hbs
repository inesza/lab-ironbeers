<article>
    <img src="{{this.image_url}}" alt="{{this.name}}" class="beer-pic">
    <div>
        {{> beerPart this}}
        <div class="pairings">
            <p><strong>Food pairings</strong></p>
            <ul class="food-pairing">
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each }}
            </ul>
        </div>
        <div class="tips">
            <strong>Brewers Tips:</strong> {{brewers_tips}}
        </div>
    </div>
</article>